<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
    <div id="error_explanation">
     <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<%= f.label :name, class: 'label-light' %>
	<%= f.text_field :name, class: 'form-control' %>

	<%= f.label :dialect, class: 'label-light' %>
	<%= f.select(:dialect) do %>
  	<% [User::YODA, User::VALLEY].each do |c| -%>
    <%= content_tag(:option, c, value: c) %>
  <% end %>
<% end %>	

	<%= f.submit 'Go!', class: 'btn btn-create' %>
<% end %>